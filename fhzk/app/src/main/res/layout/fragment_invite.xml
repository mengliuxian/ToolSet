<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F5"
    android:orientation="vertical">

    <include layout="@layout/back_toolbar" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/ic_invite_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友，返利分给你"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:text="马上行动，有钱一起赚"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout"
        android:background="@color/yellow_F9">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:background="@color/yellow_F9"
            android:orientation="horizontal"

            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计获得奖励"
                    android:textColor="@color/brown_8A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/accumulated_rebates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:background="@color/brown_8A" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                android:orientation="vertical">


                <TextView
                    android:layout_marginLeft="35dp"
                    android:id="@+id/success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成功邀请好友（1）"
                    android:textColor="@color/brown_8A"
                    android:textSize="14sp" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/can_rebates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layout1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/brown_8A" />

        <com.flym.fhzk.view.AutoWrapTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:text="奖励规则：成功邀请好友下载APP并注册登录，且被邀请人通过凤凰折购平台购物成功，确认收货后15-18天内邀请人即可获得被邀请人返利金额的20%作为奖励（邀请好友无人数上限，返利金额可累加。）"
            app:textColor="@color/red_E6"
            app:textSize="12sp" />

        <com.flym.fhzk.view.AutoWrapTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            app:text="如何邀请：点击页面中的“立即邀请”按钮，分享或复制邀请链接至QQ、微信、微博等社交媒体。好友通过您分享的链接下载并成功注册凤凰折扣APP，即邀请成功。"
            app:textColor="@color/red_E6"
            app:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/invite"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:src="@drawable/ic_invite" />
</RelativeLayout>