<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shop_logo"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/shop_logo"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right"
        android:text="裂锦旗舰店"
        android:textColor="@color/black_38"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="交易成功"
        android:textColor="@color/gray_C1"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/shop_logo"
        android:layout_marginTop="10dp"
        android:background="@color/layout_spacing_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/order_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/goods_list"
        android:background="@color/gray_F5"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black_38"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/order_data"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/more_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_bg_stroke_radius"
            android:padding="10dp"
            android:text="更多"
            android:textColor="@color/black_38"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mail_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_edit_bg_stroke_radius"
            android:padding="10dp"
            android:text="查看物流"
            android:textColor="@color/black_38"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sell_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_edit_bg_stroke_radius"
            android:padding="10dp"
            android:text="卖了换钱"
            android:textColor="@color/black_38"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/appraise_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_edit_bg_stroke_radius"
            android:padding="10dp"
            android:text="追加评价"
            android:textColor="@color/black_38"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>