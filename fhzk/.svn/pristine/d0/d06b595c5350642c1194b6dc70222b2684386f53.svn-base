<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F5"
    android:orientation="vertical">

    <include layout="@layout/back_toolbar" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/account"
        style="@style/DrawableLeftEditStyle"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_username"
        android:hint="请输入邀请码" />


    <EditText
        android:id="@+id/phone"
        style="@style/DrawableLeftEditStyle"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_phone"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="11" />

    <LinearLayout
        android:id="@+id/check_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_edit"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/validation_code"
            style="@style/DrawableLeftEditStyle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_check_code"
            android:drawablePadding="14dp"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:numeric="integer"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/get_check_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_login_button_bg"
            android:enabled="false"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/pass_word"
        style="@style/DrawableLeftEditStyle"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_pwd"
        android:hint="请输入密码"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/pass_word_again"
        style="@style/DrawableLeftEditStyle"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_pwd"
        android:hint="请再次输入密码"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_login_button_bg"
        android:enabled="false"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>