<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/goods_logo"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/goods_logo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_38"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/goods_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_name"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/goods_logo"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/gray_86"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/goods_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods_logo"
        android:layout_toRightOf="@id/goods_logo"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:text="ï¿¥"
        android:textColor="@color/red_E6"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/goods_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods_symbol"
        android:layout_toRightOf="@id/goods_symbol"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/red_E6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods_symbol"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/gray_86"
        android:textSize="12sp" />
</RelativeLayout>