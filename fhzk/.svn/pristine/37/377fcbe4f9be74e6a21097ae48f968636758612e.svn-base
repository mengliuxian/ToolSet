<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/news_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_news" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/news_logo"
        android:text="系统消息"
        android:textColor="@color/black_38"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/news_title"
        android:layout_alignParentRight="true"
        android:text="2017-11-15 16:27:21"
        android:textColor="@color/gray_86"
        android:textSize="12sp" />

    <com.flym.fhzk.view.AutoWrapTextView
        android:id="@+id/news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/news_logo"
        app:text="消息内容…………………………………………………………………… ……………………"
        app:textColor="@color/black_38"
        app:textSize="12sp" />
</RelativeLayout>