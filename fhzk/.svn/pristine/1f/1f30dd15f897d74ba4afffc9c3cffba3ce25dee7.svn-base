<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />




    <TextView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_red_stoke"
        android:padding="1dp"
        android:textColor="@color/red_E6"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginRight="10dp"

        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/mark"
        android:maxLines="1"
        android:textColor="@color/black_38"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/money"
        android:layout_below="@+id/mark"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:text="券后￥"
        android:textColor="@color/red_E6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mark"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/logo_text"
        android:textColor="@color/red_E6"
        android:textSize="16sp" />
   
    <TextView
        android:background="@color/red_E6"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:id="@+id/vouchers_return"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/money"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mark"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
     />
</RelativeLayout>