<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_toolbar" />

    <com.flym.yh.ui.view.CustomMineItemView
        android:id="@+id/change_the_password"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="7dp"
        app:bg="@color/white"
        app:titleText="@string/change_the_password" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/set_the_price"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/switch_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:checked="true"
            android:switchMinWidth="20dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track" />

    </RelativeLayout>

    <com.flym.yh.ui.view.CustomMineItemView
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="7dp"
        app:bg="@color/white"
        app:isVisity="false"
        app:titleText="@string/clear_the_cache" />


    <Button
        android:id="@+id/login_out"
        style="@style/button_style"
        android:text="@string/login_out" />

</LinearLayout>