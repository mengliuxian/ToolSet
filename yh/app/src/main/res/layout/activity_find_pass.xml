<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flym.yh.ui.activity.login.FindPassActivity">

    <include layout="@layout/back_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/phone"
                style="@style/edit_text_style"
                android:layout_below="@id/title"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_phone"
                android:hint="@string/enter_phone"
                android:inputType="number"
                android:maxLength="11" />

            <LinearLayout
                android:id="@+id/code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_edit_radio_white"
                    android:drawableLeft="@drawable/ic_safe"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_code"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/get_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_bg"
                    android:enabled="false"
                    android:text="@string/get_code"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/password"
                style="@style/edit_text_style"
                android:layout_below="@id/code_layout"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_password"
                android:hint="@string/enter_password" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/password_second"
                style="@style/edit_text_style"
                android:layout_below="@id/password"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_password"
                android:hint="@string/enter_password_second" />


            <Button
                android:id="@+id/find_pass"
                style="@style/button_style"
                android:layout_below="@id/password_second"
                android:layout_marginTop="40dp"
                android:enabled="false"
                android:text="@string/find_pass" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
