<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:l="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">


        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/it_graphic_consultation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            l:ivbg="@drawable/sy_tuwenzixun"
            l:tvstring="@string/graphic_consultation" />

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/it_telephone_consultation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            l:ivbg="@drawable/sy_dianhuazixun"
            l:tvstring="@string/telephone_consultation" />

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/it_medical_reading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            l:ivbg="@drawable/sy_yixuezixun"
            l:tvstring="@string/medical_reading" />

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/it_reservation_gohome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            l:ivbg="@drawable/sy_yuyueshangmen"
            l:tvstring="@string/reservation_gohome" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">


        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/it_doctor_lecture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            l:ivbg="@drawable/sy_mingyijiangtang"
            l:tvstring="@string/doctor_lecture" />

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/it_doctor_broadcast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            l:ivbg="@drawable/sy_mingyiguangbo"
            l:tvstring="@string/doctor_broadcast" />

        <com.flym.yh.ui.view.ImageTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            l:ivbg="@mipmap/ic_launcher_round"
            l:tvstring="投稿" />

        <com.flym.yh.ui.view.ImageTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            l:ivbg="@mipmap/ic_launcher_round"
            l:tvstring="投稿" />
    </LinearLayout>
</LinearLayout>
