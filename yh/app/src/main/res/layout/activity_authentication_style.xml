<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.flym.yh.ui.activity.login.AuthenticationStyleActivity">

    <include layout="@layout/back_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="27dp">

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/base_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_view_height="40dp"
            app:image_view_width="40dp"
            app:ivbg="@drawable/wd_smrz_jibenxinxi_dangqian"
            app:tvstring="@string/base_information" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray_C1" />

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/license_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_view_height="40dp"
            app:image_view_width="40dp"
            app:ivbg="@drawable/wd_smrz_zhizhaoxinxi_dangqian"
            app:tvstring="@string/license_information" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray_C1" />

        <com.flym.yh.ui.view.ImageTextView
            android:id="@+id/submit_audit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:image_view_height="40dp"
            app:image_view_width="40dp"
            app:ivbg="@drawable/wd_smrz_tijiaoshenhe_dangqian"
            app:tvstring="@string/submit_audit" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:text="@string/submitted_successfully"
        android:textColor="@color/red_ff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/next_bt"
        style="@style/button_style"
        android:text="@string/edit"
        android:visibility="gone" />

</LinearLayout>
