<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:l="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flym.yh.ui.view.ToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        l:contertitleText="@string/home">

    </com.flym.yh.ui.view.ToolbarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <!-- 主页布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="37dp"-->
            <!--android:background="@color/white"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="医学健康咨询在线"-->
            <!--android:textColor="@color/colorPrimary" />-->

            <com.flym.yh.ui.view.AutoScrollTextView
                android:id="@+id/au"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:paddingTop="5dp"
                android:gravity="center"
                />

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                l:banner_pointContainerBackground="@color/transparent"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/fans"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/advisory_and_service"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_good_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/favorable_rate"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">


                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_my_office"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_wodezhenshi"
                    l:tvstring="@string/my_office" />

                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_my_service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_wodefuwu"
                    l:tvstring="@string/my_service" />

                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_healthy_prescription"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_jiankangchufang"
                    l:tvstring="@string/healthy_prescription" />

                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_drug_directory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_yaowumulu"
                    l:tvstring="@string/drug_directory" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">


                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_diagnostic_template"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_zhanduanmuban"
                    l:tvstring="@string/diagnostic_template" />

                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_medication_template"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_yongyaomuban"
                    l:tvstring="@string/medication_template" />

                <com.flym.yh.ui.view.ImageTextView
                    android:id="@+id/it_contributors"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    l:ivbg="@drawable/sy_tougao"
                    l:tvstring="@string/contributors" />

                <com.flym.yh.ui.view.ImageTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    l:ivbg="@mipmap/ic_launcher_round"
                    l:tvstring="投稿" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="33dp"
                    android:text="医生服务"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="33dp"
                    android:background="@color/windowBackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">


                    <com.flym.yh.ui.view.ImageTextView
                        android:id="@+id/it_graphic_consultation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        l:ivbg="@drawable/sy_tuwenzixun"
                        l:tvstring="@string/graphic_consultation" />

                    <com.flym.yh.ui.view.ImageTextView
                        android:id="@+id/it_telephone_consultation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        l:ivbg="@drawable/sy_dianhuazixun"
                        l:tvstring="@string/telephone_consultation" />

                    <com.flym.yh.ui.view.ImageTextView
                        android:id="@+id/it_medical_reading"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        l:ivbg="@drawable/sy_yixuezixun"
                        l:tvstring="@string/medical_reading" />

                    <com.flym.yh.ui.view.ImageTextView
                        android:id="@+id/it_reservation_gohome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        l:ivbg="@drawable/sy_yuyueshangmen"
                        l:tvstring="@string/reservation_gohome" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">


                    <com.flym.yh.ui.view.ImageTextView
                        android:id="@+id/it_doctor_lecture"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        l:ivbg="@drawable/sy_mingyijiangtang"
                        l:tvstring="@string/doctor_lecture" />

                    <com.flym.yh.ui.view.ImageTextView
                        android:id="@+id/it_doctor_broadcast"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        l:ivbg="@drawable/sy_mingyiguangbo"
                        l:tvstring="@string/doctor_broadcast" />

                    <com.flym.yh.ui.view.ImageTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        l:ivbg="@mipmap/ic_launcher_round"
                        l:tvstring="投稿" />

                    <com.flym.yh.ui.view.ImageTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        l:ivbg="@mipmap/ic_launcher_round"
                        l:tvstring="投稿" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

